{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "declaration": true,

    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",

    "rootDir": "src",
    "outDir": "dist",
  },
  "include": ["src/**/*.mts"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
  }
}